  printf "%-${LAST_COLUMN}s\n" "$state"
  if [[ $NAGIOS -eq 1 ]]; then
    printf "%s\n" "$state" >> "${TMP_DIR}/nagios"
    if [[ "$NAGIOSREPORT" == "hosts" ]]; then
      printf "%s\n" "$state" >> "${TMP_DIR}/$NAGIOSREPORT"
    fi
  fi
}

